<h1>Listing buttons</h1>

<table>
  <tr>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @buttons.each do |button| %>
  <tr>
    <td><%= button.state %></td>
    <td><%= link_to 'Show', button %></td>
    <td><%= link_to 'Edit', edit_button_path(button) %></td>
    <td><%= link_to 'Destroy', button, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

